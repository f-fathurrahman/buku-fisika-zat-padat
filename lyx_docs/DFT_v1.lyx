\begin_layout Section*
Clamped nuclei approximation
\end_layout

\begin_layout Standard
Asumsikan inti atom tidak bergerak, dijaga tetap pada posisi yang sudah
 diketahui.
 Energi kinetik inti atom diabaikan dan interaksi Coulomb antara inti atom
 yang berbeda berupa konstanta.
 Dengan definisi:
\begin_inset Formula 
\[
E=E_{\mathrm{tot}}-\frac{1}{2}\sum_{I\neq J}\frac{Z_{I}Z_{J}}{\left|\mathbf{R}_{I}-\mathbf{\mathbf{R}_{J}}\right|}
\]

\end_inset

Persamaan Schroedinger banyak partikel dapat ditulis menjadi
\begin_inset Formula 
\[
\left[-\frac{1}{2}\sum_{i}\frac{\nabla_{i}^{2}}{2}-\sum_{i,I}\frac{Z_{I}}{\left|\mathbf{r}_{i}-\mathbf{R}_{I}\right|}+\frac{1}{2}\sum_{i\neq j}\frac{1}{\left|\mathbf{r}_{i}-\mathbf{r}_{j}\right|}\right]\Psi=E\Psi
\]

\end_inset


\end_layout

\begin_layout Standard
Dengan definisi
\begin_inset Formula 
\[
V_{n}(\mathbf{r})\equiv-\sum_{I}\frac{Z_{I}}{\left|\mathbf{r}-\mathbf{R}_{I}\right|}
\]

\end_inset


\end_layout

\begin_layout Standard
Kita mendapatkan:
\begin_inset Formula 
\[
\left[-\frac{1}{2}\sum_{i}\frac{\nabla_{i}^{2}}{2}+\sum_{i}V_{n}(\mathbf{r}_{i})+\frac{1}{2}\sum_{i\neq j}\frac{1}{\left|\mathbf{r}_{i}-\mathbf{r}_{j}\right|}\right]\Psi=E\Psi
\]

\end_inset


\end_layout

\begin_layout Standard
Definisikan Hamiltonian banyak-elektron (many-electron Hamiltonian):
\begin_inset Formula 
\[
\hat{H}\left(\mathbf{r}_{1},\ldots\mathbf{r}_{N}\right)\equiv-\frac{1}{2}\sum_{i}\frac{\nabla_{i}^{2}}{2}+\sum_{i}V_{n}(\mathbf{r}_{i})+\frac{1}{2}\sum_{i\neq j}\frac{1}{\left|\mathbf{r}_{i}-\mathbf{r}_{j}\right|}
\]

\end_inset

dapat dituliskan:
\begin_inset Formula 
\[
\hat{H}\Psi=E\Psi
\]

\end_inset


\end_layout

\begin_layout Standard
Hamiltonian elektron-tunggal (single-elektron Hamiltonian):
\begin_inset Formula 
\[
\hat{H}_{0}(\mathbf{r})\equiv-\frac{1}{2}\nabla^{2}+V_{n}(\mathbf{r})
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\hat{H}\left(\mathbf{r}_{1},\ldots\mathbf{r}_{N}\right)\equiv\sum_{i}\hat{H}_{0}(\mathbf{r}_{i})+\frac{1}{2}\sum_{i\neq j}\frac{1}{\left|\mathbf{r}_{i}-\mathbf{r}_{j}\right|}
\]

\end_inset


\end_layout

\begin_layout Section*
Aproksimasi elektron bebas
\end_layout

\begin_layout Standard
Abaikan interaksi Coulomb antara elektron-elektron:
\begin_inset Formula 
\[
\sum_{i}\hat{H}_{0}(\mathbf{r}_{i})\Psi=E\Psi
\]

\end_inset


\end_layout

\begin_layout Standard
Fungsi gelombang banyak-elektron dapat diaproksimasi menjadi hasil kali
 dari fungsi gelombang satu-elektron atau orbital:
\begin_inset Formula 
\[
\Psi(\mathbf{r}_{1},\ldots,\mathbf{r}_{N})=\phi_{1}(\mathbf{r}_{1})\cdots\phi_{N}(\mathbf{r}_{N})
\]

\end_inset


\end_layout

\begin_layout Standard
Orbital diperoleh sebagai solusi dari persamaan Schroedinger satu-elektron:
\begin_inset Formula 
\[
\hat{H}_{0}(\mathbf{r})\phi_{i}(\mathbf{r})=\varepsilon_{i}\phi_{i}(\mathbf{r})
\]

\end_inset

dengan 
\begin_inset Formula $\varepsilon_{1}$
\end_inset

 adalah nilai eigen terkecil dan 
\begin_inset Formula $\varepsilon_{1}<\varepsilon_{2}<\cdots<\varepsilon_{N}$
\end_inset

.
\end_layout

\begin_layout Standard
Substitusi:
\begin_inset Formula 
\[
\left[\sum_{i}\hat{H}_{0}(\mathbf{r}_{i})\right]\phi_{1}(\mathbf{r}_{1})\cdots\phi_{N}(\mathbf{r}_{N})=E\phi_{1}(\mathbf{r}_{1})\cdots\phi_{N}(\mathbf{r}_{N})
\]

\end_inset


\end_layout

\begin_layout Standard
Dengan mengingat bahwa 
\begin_inset Formula $\hat{H}_{0}$
\end_inset

 adalah Hamiltonian elektron-tunggal: 
\begin_inset Formula $\hat{H}_{0}(\mathbf{r}_{1})$
\end_inset

 hanya bekerja pada fungsi 
\begin_inset Formula $\phi_{1}(\mathbf{r}_{1})$
\end_inset

, 
\begin_inset Formula $\hat{H}_{0}(\mathbf{r}_{2})$
\end_inset

 hanya bekerja pada fungsi 
\begin_inset Formula $\phi_{2}(\mathbf{r}_{2})$
\end_inset

, kita dapat menuliskan:
\begin_inset Formula 
\begin{align*}
\left[\hat{H}_{0}(\mathbf{r}_{1})\phi_{1}(\mathbf{r}_{1})\right]\phi_{2}(\mathbf{r}_{2})\cdots\phi_{N}(\mathbf{r}_{N}) & +\\
\phi_{1}(\mathbf{r}_{1})\left[\hat{H}_{0}(\mathbf{r}_{2})\phi_{2}(\mathbf{r}_{2})\right]\cdots\phi_{N}(\mathbf{r}_{N}) & +\cdots=\\
E\phi_{1}(\mathbf{r}_{1})\cdots\phi_{N}(\mathbf{r}_{N})
\end{align*}

\end_inset

Sehingga diperoleh:
\begin_inset Formula 
\[
E=\varepsilon_{1}+\varepsilon_{2}+\cdots+\varepsilon_{N}
\]

\end_inset


\end_layout

\begin_layout Standard
Kerapatan elektron:
\begin_inset Formula 
\[
n(\mathbf{r})=\sum_{i}\left|\phi_{i}(\mathbf{r})\right|^{2}
\]

\end_inset


\end_layout

\begin_layout Section*
Prinsip ekslusi Pauli, determinan Slater
\end_layout

\begin_layout Standard
Untuk dua elektron:
\begin_inset Formula 
\[
\Psi(\mathbf{r}_{1},\mathbf{r}_{2})=\frac{1}{\sqrt{2}}\left[\phi_{1}(\mathbf{r}_{1})\phi_{2}(\mathbf{r}_{2})-\phi_{1}(\mathbf{r}_{2})\phi_{2}(\mathbf{r}_{1})\right]
\]

\end_inset


\end_layout

\begin_layout Standard
Tukar posisi 
\begin_inset Formula $\mathbf{r}_{1}$
\end_inset

 dan 
\begin_inset Formula $\mathbf{r}_{2}$
\end_inset

:
\begin_inset Formula 
\[
\Psi(\mathbf{r}_{2},\mathbf{r}_{1})=\frac{1}{\sqrt{2}}\left[\phi_{1}(\mathbf{r}_{2})\phi_{2}(\mathbf{r}_{1})-\phi_{1}(\mathbf{r}_{1})\phi_{2}(\mathbf{r}_{2})\right]
\]

\end_inset


\end_layout

\begin_layout Standard
Sehingga: 
\begin_inset Formula 
\[
\Psi(\mathbf{r}_{1},\mathbf{r}_{2})=-\Psi(\mathbf{r}_{2},\mathbf{r}_{1})
\]

\end_inset


\end_layout

\begin_layout Standard
Determinan Slater:
\begin_inset Formula 
\[
\Psi(\mathbf{r}_{1},\mathbf{r}_{2})=\frac{1}{\sqrt{2}}\begin{vmatrix}\phi_{1}(\mathbf{r}_{1}) & \phi_{1}(\mathbf{r}_{2})\\
\phi_{2}(\mathbf{r}_{1}) & \phi_{2}(\mathbf{r}_{2})
\end{vmatrix}
\]

\end_inset


\end_layout

\begin_layout Section*
Aproksimasi medan rata-rata
\end_layout

\begin_layout Standard
Mean field approximation, metode Hartree.
\end_layout

\begin_layout Standard
Persamaan:
\begin_inset Formula 
\[
\nabla^{2}\varphi(\boldsymbol{r})=4\pi n(\boldsymbol{r})
\]

\end_inset


\end_layout

\begin_layout Standard
Dalam satuan Hartree: 
\begin_inset Formula $\varphi(\boldsymbol{r})=-V_{H}(\mathbf{r)}$
\end_inset

, yang dikenal sebagai potensial Hartree:
\begin_inset Formula 
\[
\nabla^{2}V_{H}(\mathbf{r})=-4\pi n(\mathbf{r)}
\]

\end_inset


\end_layout

\begin_layout Standard
Solusi formal (bentuk integral):
\begin_inset Formula 
\[
V_{H}(\mathbf{r})=\int\frac{n(\boldsymbol{r}')}{\left|\mathbf{r}-\mathbf{r'}\right|}\ \mathrm{d}\mathbf{r}
\]

\end_inset


\end_layout

\begin_layout Standard
Tambahkan pada persamaan elektron bebas:
\begin_inset Formula 
\[
\left[-\frac{\nabla^{2}}{2}+V_{n}(\mathbf{r})+V_{H}(\mathbf{r})\right]\phi_{i}(\mathbf{r})=\varepsilon_{i}\phi_{i}(\mathbf{r})
\]

\end_inset

dengan kerapatan elektron:
\begin_inset Formula 
\[
n(\boldsymbol{r})=\sum_{i}\left|\phi_{i}(\mathbf{r})\right|^{2}
\]

\end_inset


\end_layout

\begin_layout Standard
dan potensial Hartree:
\begin_inset Formula 
\[
\nabla^{2}V_{H}(\mathbf{r})=-4\pi n(\mathbf{r)}
\]

\end_inset


\end_layout

\begin_layout Section*
Persamaan Hartree-Fock
\end_layout

\begin_layout Standard
Substitusi determinan Slater pada persamaan Schroedinger satu-elektron:
\begin_inset Formula 
\[
\left[-\frac{\nabla^{2}}{2}+V_{n}(\mathbf{r})+V_{H}(\mathbf{r})\right]\phi_{i}(\mathbf{r})+\int\mathrm{d}\mathbf{r}\ V_{X}(\mathbf{r},\mathbf{r}')\phi_{i}(\mathbf{r}')=\varepsilon_{i}\phi_{i}(\mathbf{r})
\]

\end_inset

dengan potensial nonlokal
\begin_inset Formula 
\[
V_{X}(\mathbf{r},\mathbf{r}')=-\sum_{j}\frac{\phi_{j}^{*}(\mathbf{r}')\phi_{j}(\mathbf{r})}{\left|\mathbf{r}-\mathbf{r}'\right|}
\]

\end_inset


\end_layout

