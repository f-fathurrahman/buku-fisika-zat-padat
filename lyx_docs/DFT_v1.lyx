\[
\Psi\equiv\Psi\left(\mathbf{r}_{1},\mathbf{r}_{2},\ldots,\mathbf{r}_{N};\mathbf{R}_{1},\mathbf{R}_{2},\ldots,\mathbf{R}_{M}\right)
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $\left|\Psi\left(\mathbf{r}_{1},\mathbf{r}_{2},\ldots,\mathbf{r}_{N};\mathbf{R}_{1},\mathbf{R}_{2},\ldots,\mathbf{R}_{M}\right)\right|^{2}$
\end_inset

