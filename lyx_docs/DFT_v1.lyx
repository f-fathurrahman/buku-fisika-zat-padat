\begin_inset Formula 
\[
\left[-\frac{\nabla^{2}}{2}+V_{n}(\mathbf{r})+V_{H}(\mathbf{r})+V_{x}(\mathbf{r})+V_{c}(\mathbf{r})\right]\phi_{i}(\mathbf{r})=\varepsilon_{i}\phi_{i}(\mathbf{r})
\]

\end_inset


\end_layout

